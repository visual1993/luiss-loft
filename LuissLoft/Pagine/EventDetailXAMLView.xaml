<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LuissLoft.EventDetailXAMLView">
	<ContentPage.Content>
		<Grid BackgroundColor="Navy">
			<Grid.RowDefinitions>
				<RowDefinition Height="0.35*"/>
				<RowDefinition Height="0.30*"/>
				<RowDefinition Height="0.35*"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.6*"/>
				<ColumnDefinition Width="0.5*"/>
			</Grid.ColumnDefinitions>

			<Image
				Source="{Binding Img}"
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="2"
			/>
			
			<Label
				Text="{Binding Title}"
				TextColor="White"
				FontSize="30"
				Grid.Row="1"
				Grid.Column="0"
			/>

			<Label
				Text="Descrizione di prova, questa è una descrizione più lunga del solito"
				TextColor="White"
				FontSize="25"
				Grid.Row="2"
				Grid.Column="0"
				Grid.ColumnSpan="2"
			/>

			<StackLayout
				Orientation="Vertical"
				Grid.Row="1"
				Grid.Column="1"
				>
				<Label TextColor="Red" FontSize="20" Text="Data Inizio"/>
				<Label TextColor="Green" FontSize="20" Text="Durata"/>
			</StackLayout>
			
		</Grid>
	</ContentPage.Content>
</ContentPage>
